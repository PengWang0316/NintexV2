{
  "compilerOptions": {
      "outDir": "./tsdist/",
      "sourceMap": true,
      "alwaysStrict": true,
      "removeComments": true,
      "module": "esnext",
      "target": "es5",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "lib": ["es2017", "dom"],
      "importHelpers": true,
      // "types": ["cypress"],
  },
  "include": [
      // "./app/**/*"
      "**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}